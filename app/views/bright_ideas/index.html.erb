<% content_for  :left_column do %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <h1>Hello <%= @user.name %></h1>
  <a class="btn btn-outline-danger" href="<%= logout_path %>" data-method="delete">Logout</a>
</nav>
<%= render 'partials/errors' %>
  <div class="container text-center">
    <form action="<%= bright_ideas_path %>" method="post" >
      <div class="input-group mb-3">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input class="form-control" id="exampleFormControlInput1" type="text" name="content" placeholder="Post something witty here...">
      <div class="input-group-append">
        <button class="btn btn-primary" type="submit">Idea!</button>
      </div>
      </div>
    </form>
  </div>

<% @ideas.each do|idea| %>
  <div class="container">
    <div class="card">
      <div class="card-body">
          <p ><a href="/bright_ideas/<%= idea.user.id %>"><%= idea.user.name %></a> says:</p>
          <%= idea.content %>
          <a href="/likes/<%= idea.user.id %>/<%= idea.id %>" class="btn btn-info">Like</a>
      </div>
    </div>
  </div>
<% end %>
<% end %>
