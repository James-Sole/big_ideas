<% content_for  :left_column do %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <h1><%= @user.name %>'s Idea</h1>
  <a class="btn btn-outline-danger" href="<%= logout_path %>" data-method="delete">Logout</a>
  <a class="btn btn-outline-dark" href="<%= bright_ideas_path %>">Bright Ideas</a>
</nav>
<p ><a href="/bright_ideas"><%= @user.name %></a> says:</p>
<div class="card">
  <p><%= @user.ideas %></p>
</div>
<table>
  <thead>
    <th>Alias</th>
    <th>Name</th>
  </thead>
  <tbody>
    <% @users.each do|user| %>
      <td><%= user.name %></td>
      <td><%= user.ideas.content %></td>
    <% end %>
  </tbody>

</table>
<% end %>
